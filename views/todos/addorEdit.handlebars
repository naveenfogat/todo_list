<h1 class="text-center"><span><i class="fas fa-list-ul text-danger"></i></span>
  <span class="fw-bold">{{Title}}</span>
</h1>

<form action="/todo" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{todo._id}}">
  <div class="form-group">
    <label for="task" class="mt-4">Task</label>
    <input
      type="text"
      name="task"
      placeholder="Add todo here"
      class="form-control"
      value="{{todo.task}}"
    />
  </div>
  <div class="form-group">
    <label for="priority" class="mt-4">Priority</label>
    <input
      type="text"
      name="priority"
      placeholder="low/medium/high"
      class="form-control"
       value="{{todo.priority}}"
    />
  </div>
  <div class="form-group">
    <label for="deadline" class="mt-4">Deadline</label>
    <input type="text" name="deadline" class="form-control"  value="{{todo.deadline}}" />
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-custom btn-lg mt-4 col-12"><i
        class="fas fa-database"
      ></i>
      Add</button>
      <a href="/todo/allTodos" class="btn  btn-lg mt-4" style="background-color: #383CC1; color:white"><i class="fas fa-stream"></i> View all</a>
  </div>
</form>
